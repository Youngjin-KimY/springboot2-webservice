<!DOCTYPE HTML>
<html>
    {{>layout/header}}

    <h1>Posting</h1>
    <div class = "col-md-12" style="margin-left: 10px;">
        <div class="row">
            <div class = "col-md-6">
                <a href = "/posts/save" role="button" class="btn btn-primary">
                    post article
                </a>
                {{#userName}}
                        Logged in as: <span id="user">{{userName}}</span>
                    <a href="/logout" class="btn btn-info active" role="button">Logout</a>
                    {{/userName}}
                {{^userName}}
                    <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">
                        Google Login</a>
                    <a href="/oauth2/authorization/naver" class="btn btn-secondary active" role="button">
                        Naver Login</a>
                    {{/userName}}
            </div>
        </div>
    </div>
    <br>
    <!--    list-->
    <table class="table table-horizontal table-bordered" style="margin-left: 10px;">
        <thead class="thread-strong">
            <tr>
                <th>No</th>
                <th>Title</th>
                <th>Author</th>
                <th>last modified time</th>
            </tr>
        </thead>
        <tbody id="tbody">
        {{#posts}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/posts/update/{{id}}">{{title}}</td>
                <td>{{author}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/posts}}
        </tbody>
    </table>



    {{>layout/footer}}
</html>
